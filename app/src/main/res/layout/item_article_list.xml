<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_article_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"
        android:textColor="@color/color_text_content"
        android:text="author"/>

    <TextView
        android:id="@+id/tv_article_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_article_item_author"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/color_text_title"
        android:text="i am a title of one article, i try to become longer and longer and longer"/>

    <TextView
        android:id="@+id/tv_article_item_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_article_item_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:textColor="@color/color_text_link"
        android:text="tag001"/>

    <TextView
        android:id="@+id/tv_article_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_article_item_tag"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="10sp"
        android:text="2019-9-20"/>

    <ImageView
        android:id="@+id/img_article_item_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_article_item_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_article_item_time"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_collect"/>

</androidx.constraintlayout.widget.ConstraintLayout>